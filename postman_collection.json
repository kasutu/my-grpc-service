              "host": ["{{baseUrl}}"],
              "path": ["analytics", "events", "{{deviceId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"events\": [\n    {\n      \"event_id\": \"{{eventId}}\",\n      \"timestamp_ms\": {{$timestamp}},\n      \"category\": \"PLAYBACK\",\n      \"playback\": {\n        \"campaign_id\": \"{{campaignId}}\",\n        \"media_id\": \"{{mediaId}}\",\n        \"duration_ms\": 5000,\n        \"completed\": true\n      }\n    }\n  ]\n}"
            },
            "description": "Submit analytics events (auto-creates batch)."
          }
        },
