    {
      "name": "Analytics",
      "description": "Analytics event ingestion and querying",
      "item": [
        {
          "name": "Submit Batch (gRPC wrapper)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/batch/{{deviceFingerprint}}",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "batch", "{{deviceFingerprint}}"]
