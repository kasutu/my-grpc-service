  "item": [
    {
      "name": "Content",
      "description": "Content delivery endpoints for pushing media packages to devices",
      "item": [
        {
          "name": "Push Content to Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/content/push/{{deviceId}}?timeout={{timeout}}",
              "host": ["{{baseUrl}}"],
              "path": ["content", "push", "{{deviceId}}"],
              "query": [
                {
                  "key": "timeout",
                  "value": "{{timeout}}",
                  "description": "ACK timeout in milliseconds (optional)"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"delivery_id\": \"{{deliveryId}}\",\n  \"content\": {\n    \"id\": 1,\n    \"hmac_signature\": \"abc123\",\n    \"time_slots\": [\n      {\n        \"id\": \"slot-001\",\n        \"start_window\": \"2024-01-01T08:00:00Z\",\n        \"end_window\": \"2024-01-01T20:00:00Z\",\n        \"campaigns\": [\n          {\n            \"id\": \"{{campaignId}}\",\n            \"index\": 0,\n            \"media_id\": \"{{mediaId}}\"\n          }\n        ]\n      }\n    ],\n    \"fallback_media_ref\": {\n      \"media_id\": \"fallback-001\"\n    },\n    \"created_at\": \"2024-01-01T00:00:00Z\"\n  },\n  \"media\": [\n    {\n      \"id\": \"{{mediaId}}\",\n      \"checksum\": \"sha256:abc123\",\n      \"url\": \"https://example.com/media/video1.mp4\"\n    }\n  ],\n  \"requires_ack\": true\n}"
            },
            "description": "Push a content package to a specific device. Returns 503 if device not connected, 408 on ACK timeout, 200 on success."
          }
        },
        {
          "name": "Broadcast Content to All",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/content/broadcast?timeout={{timeout}}",
              "host": ["{{baseUrl}}"],
              "path": ["content", "broadcast"],
              "query": [
                {
                  "key": "timeout",
                  "value": "{{timeout}}",
                  "description": "ACK timeout in milliseconds (optional)"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"delivery_id\": \"broadcast-{{deliveryId}}\",\n  \"content\": {\n    \"id\": 2,\n    \"hmac_signature\": \"def456\",\n    \"time_slots\": [\n      {\n        \"id\": \"slot-broadcast\",\n        \"start_window\": \"2024-01-01T00:00:00Z\",\n        \"end_window\": \"2024-12-31T23:59:59Z\",\n        \"campaigns\": [\n          {\n            \"id\": \"broadcast-campaign\",\n            \"index\": 0,\n            \"media_id\": \"broadcast-media\"\n          }\n        ]\n      }\n    ],\n    \"fallback_media_ref\": {\n      \"media_id\": \"fallback-broadcast\"\n    },\n    \"created_at\": \"2024-01-01T00:00:00Z\"\n  },\n  \"media\": [\n    {\n      \"id\": \"broadcast-media\",\n      \"checksum\": \"sha256:def456\",\n      \"url\": \"https://example.com/media/broadcast.mp4\"\n    }\n  ],\n  \"requires_ack\": true\n}"
            },
            "description": "Broadcast content package to all connected devices. Returns 207 if partially successful."
          }
        },
        {
          "name": "Get Content Stats",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/content/stats",
              "host": ["{{baseUrl}}"],
              "path": ["content", "stats"]
            },
            "description": "Get count of connected devices for content delivery."
          }
        }
      ]
    },
