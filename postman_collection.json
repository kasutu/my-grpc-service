            "body": {
              "mode": "raw",
              "raw": "{\n  \"events\": [\n    {\n      \"event_id\": \"error-{{$randomUUID}}\",\n      \"timestamp_ms\": {{$timestamp}},\n      \"category\": \"ERROR\",\n      \"error\": {\n        \"error_type\": \"DOWNLOAD_FAILED\",\n        \"message\": \"Failed to download media\",\n        \"component\": \"MediaDownloader\",\n        \"is_fatal\": false\n      }\n    }\n  ]\n}"
            },
            "description": "Submit error analytics event."
          }
        },
        {
          "name": "Submit Health Event",
