            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/analytics/events/{{deviceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "events", "{{deviceId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"events\": [\n    {\n      \"event_id\": \"health-{{$randomUUID}}\",\n      \"timestamp_ms\": {{$timestamp}},\n      \"category\": \"HEALTH\",\n      \"health\": {\n        \"battery_level\": 85.5,\n        \"storage_free_bytes\": 2147483648,\n        \"cpu_usage\": 23.4,\n        \"memory_usage\": 45.2,\n        \"connection_quality\": 1\n      }\n    }\n  ]\n}"
            },
            "description": "Submit health metrics event."
          }
        },
        {
          "name": "Query Events (with filters)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/analytics/events?device_id={{deviceId}}&category=PLAYBACK&from=1700000000000&to=1800000000000",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "events"],
              "query": [
                {
                  "key": "device_id",
                  "value": "{{deviceId}}",
                  "description": "Filter by device ID"
                },
                {
                  "key": "category",
                  "value": "PLAYBACK",
                  "description": "Filter by event category: PLAYBACK, ERROR, HEALTH"
                },
                {
                  "key": "from",
                  "value": "1700000000000",
                  "description": "Start timestamp (ms)"
                },
                {
                  "key": "to",
                  "value": "1800000000000",
                  "description": "End timestamp (ms)"
                }
              ]
            },
            "description": "Query analytics events with filters."
          }
        },
        {
          "name": "Get Device Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/analytics/events/{{deviceId}}",
