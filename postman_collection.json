            "body": {
              "mode": "raw",
              "raw": "{\n  \"batch_id\": \"{{$randomUUID}}\",\n  \"events\": [\n    {\n      \"event_id\": \"{{eventId}}\",\n      \"timestamp_ms\": {{$timestamp}},\n      \"category\": \"PLAYBACK\",\n      \"playback\": {\n        \"campaign_id\": \"{{campaignId}}\",\n        \"media_id\": \"{{mediaId}}\",\n        \"duration_ms\": 5000,\n        \"completed\": true\n      }\n    }\n  ]\n}"
            },
            "description": "Submit analytics batch via HTTP (wraps gRPC call)."
          }
        },
        {
          "name": "Submit Events",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
